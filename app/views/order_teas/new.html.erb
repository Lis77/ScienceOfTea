<%= simple_form_for @order_tea do |f| %>
  <%= f.input :tealeaf, required: true %>
  </br>
  <%= f.input :base_flavour, required: true %>
  </br>
  <%= f.input :accent_flavour, required: true %>
  </br>
  <%= f.input :create_name, required: true %>
  </br>
  <%= f.button :submit %>
<% end %>
</br>
</br>

<%= form_tag charges_path do %>
  <article>
    <label class="amount">
      <span>Amount: $13.00</span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="The cost of creation:"
          data-amount="1300"></script>
<% end %>