

<div id="background"><%= image_tag("blackboard.jpg") %></div>
<div id="tealogo"><%= image_tag("tealogo.png") %></div>
<h2 id="review"> ReviewTEA </h2>

<div id ="web2_button">
   <%= link_to "IntroTEA", root_path%>
 </div>
   
<div id= "create2_button">
  <%= link_to 'CreateTEA', new_order_tea_path %>
</div>


<div id="einstein_pic"><%= image_tag("einstein.png") %></div>

<h4 id="einstein_title"> Einstein Says: </h4>
<div id ="einstein_quote">
    <p>Be creative, be original, but also </p> make sure your order is correct!</p>
</div>

<div id ="elink">
  <%= link_to "Advice From Einstein" ,
  'http://www.brainyquote.com/quotes/authors/a/albert_einstein.html' %>
</div>
  
<div class = "summary">
<h3>Your Order Summary Is:</h3>

<p id ="summary_paragraph">Creators Name:<%= @order_tea.client_name %> </br>
  Creators Address: <%= @order_tea.client_address %> </br>
  Creators Email:<%= @order_tea.client_email %> </br>
  Creation Name:<%= @order_tea.create_name %></br>
  Tea Leaf Chosen:<%= @order_tea.tealeaf %>  </br>
  Base Flavour Chosen:<%= @order_tea.base_flavour%></br>
  Accent Flavour: <%= @order_tea.accent_flavour %> </p>
</br>
<h4> If your order is correct please press</br>
 the "Pay With Card" button below </h4>
</div>

<div class="payment_form">
<%= form_tag approveds_path do %>
  <article>
    <label class="amount">
      <span>Amount: $13.00</span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="The cost of creation:"
          data-amount="1300"></script>
 </div>         
<% end %>


